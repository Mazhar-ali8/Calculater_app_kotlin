<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a6d5ef">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/buttun_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="5dp"
                                android:onClick="percentEvent"
                                android:background="@drawable/round_button_background"
                                android:text="%"
                                android:textColor="#bedee8"
                                android:textSize="25sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="3dp"

                            android:layout_weight="1">

                            <Button
                                android:id="@+id/button_seven"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:onClick="numberEvent"
                                android:background="@drawable/digits_button_bg"
                                android:minHeight="70dp"
                                android:text="7"
                                android:textColor="@color/white"
                                android:textSize="25sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="3dp"

                            android:layout_weight="1">

                            <Button
                                android:id="@+id/buttun_eight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:onClick="numberEvent"

                                android:background="@drawable/digits_button_bg"
                                android:minHeight="70dp"
                                android:text="8"
                                android:textColor="@color/white"
                                android:textSize="25sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="3dp"

                            android:layout_weight="1">

                            <Button
                                android:id="@+id/buttun_nine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:onClick="numberEvent"

                                android:background="@drawable/digits_button_bg"
                                android:minHeight="70dp"
                                android:text="9"
                                android:textColor="@color/white"
                                android:textSize="25sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/buttun_divide"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:onClick="performOperation"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/round_button_background"
                                android:text="/"
                                android:textColor="#bedee8"
                                android:textSize="25sp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_square_root"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:onClick="perfomSqaureRoot"
                            android:background="@drawable/round_button_background"
                            android:text="âˆš"
                            android:textColor="#bedee8"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"

                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="numberEvent"

                            android:background="@drawable/digits_button_bg"
                            android:minHeight="70dp"
                            android:text="4"
                            android:textColor="@color/white"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"

                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="numberEvent"

                            android:background="@drawable/digits_button_bg"
                            android:minHeight="70dp"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"

                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_six"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="numberEvent"

                            android:background="@drawable/digits_button_bg"
                            android:minHeight="70dp"
                            android:text="6"
                            android:textColor="@color/white"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_multiply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:onClick="performOperation"

                            android:layout_marginRight="15dp"
                            android:background="@drawable/round_button_background"
                            android:gravity="center"
                            android:text="*"
                            android:textColor="#bedee8"
                            android:textSize="25sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:onClick="clearEvent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/round_button_background"
                            android:text="CE"
                            android:textColor="#bedee8"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"

                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/digits_button_bg"
                            android:minHeight="70dp"
                            android:onClick="numberEvent"

                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"

                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/digits_button_bg"
                            android:minHeight="70dp"
                            android:onClick="numberEvent"

                            android:text="2"
                            android:textColor="@color/white"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"

                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/digits_button_bg"
                            android:minHeight="70dp"
                            android:text="3"
                            android:onClick="numberEvent"

                            android:textColor="@color/white"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp"
                            android:onClick="performOperation"

                            android:background="@drawable/round_button_background"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#bedee8"
                            android:textSize="25sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_on"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/red_round_button"
                            android:text="OFF"
                            android:textColor="#bedee8"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"

                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/digits_button_bg"
                            android:minHeight="70dp"
                            android:text="0"
                            android:onClick="numberEvent"

                            android:textColor="@color/white"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"

                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/digits_button_bg"
                            android:minHeight="70dp"
                            android:text="."
                            android:onClick="numberEvent"

                            android:textColor="@color/white"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"

                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_plusminus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+/-"
                            android:onClick="numberEvent"

                            android:background="@drawable/digits_button_bg"
                            android:minHeight="70dp"
                            android:textColor="@color/white"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/buttun_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp"
                            android:onClick="performOperation"

                            android:background="@drawable/radius"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#bedee8"
                            android:textSize="25sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:id="@+id/buttun_eqaul"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:onClick="equalEvent"
                        android:background="@drawable/radius"
                        android:gravity="center"
                        android:text="="
                        android:textColor="#bedee8"
                        android:textSize="25sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

